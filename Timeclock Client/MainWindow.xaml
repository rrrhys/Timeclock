<Window x:Class="Timeclock_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Timeclock" Height="350" Width="249" Loaded="Window_Loaded" Icon="1435308138_checkmark_tick.ico">
    <Grid Margin="0,0,212,0">
        <ComboBox x:Name="cJobNumber" VerticalAlignment="Top" Margin="10,33,-204,0" IsEditable="True" LostFocus="cJobNumber_LostFocus"/>
        <ComboBox x:Name="cWorkTypes" VerticalAlignment="Top" Margin="10,60,-204,0" IsEditable="True"/>
        <TextBox x:Name="tComments" Margin="10,87,-204,79" TextWrapping="Wrap"/>
        <Label x:Name="lTimeStarted" Content="Started at HH:MMam" HorizontalAlignment="Left" Height="30" Margin="10,0,-110,41" VerticalAlignment="Bottom" Width="129" FontSize="9"/>
        <Button x:Name="bFinishJob" Content="Finish" HorizontalAlignment="Right" Height="30" Margin="0,0,-204,6" VerticalAlignment="Bottom" Width="89" Click="bFinishJob_Click"/>
        <Button x:Name="bStartJob" Content="Start" HorizontalAlignment="Right" Height="30" Margin="0,0,-204,41" VerticalAlignment="Bottom" Width="89" Click="bStartJob_Click"/>
        <Label x:Name="lRecordingEntries" Content="Recording entries for XXX" HorizontalAlignment="Right" Height="22" Margin="0,6,-204,0" VerticalAlignment="Top" Width="171" FontSize="9" HorizontalContentAlignment="Right" Loaded="Label_Loaded"/>

    </Grid>
</Window>
